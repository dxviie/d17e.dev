---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface FeaturedContentProps {
    label: string;
    title: string;
    description: string;
    href: string;
    linkText?: string;
    image: ImageMetadata;
    imageAlt: string;
}

const {
    label,
    title,
    description,
    href,
    linkText = "View featured",
    image,
    imageAlt,
} = Astro.props;
---

<article class="featured-card">
    <a class="featured-media" href={href}>
        <Image
            class="featured-image"
            src={image}
            width={560}
            height={360}
            alt={imageAlt}
            format="webp"
        />
    </a>
    <div class="featured-body">
        <div class="featured-label">{label}</div>
        <h3 class="featured-title">
            <a href={href}>{title}</a>
        </h3>
        <p class="featured-description">{description}</p>
        <a class="featured-link" href={href}>
            <span>{linkText}</span>
        </a>
    </div>
</article>

<style>
    .featured-card {
        display: grid;
        grid-template-columns: minmax(0, 1fr) minmax(0, 1.2fr);
        gap: 1.5rem;
        align-items: center;
        padding: 1.5rem;
        margin: 2rem 0;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        background-color: var(--bg-color);
    }

    .featured-media {
        display: block;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid var(--border-color);
        aspect-ratio: 4 / 3;
    }

    .featured-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .featured-body {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .featured-label {
        font-family: "nudica_monobold", serif;
        font-size: 0.85rem;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--accent-color);
    }

    .featured-title {
        font-family: "nudica_monobold", serif;
        font-size: 1.4rem;
        margin: 0;
        color: var(--color);
    }

    .featured-title a {
        color: inherit;
        text-decoration: none;
    }

    .featured-description {
        font-family: "argesta_regular", serif;
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
        color: var(--color);
        opacity: 0.85;
    }

    .featured-link {
        font-family: "nudica_monolight", serif;
        font-size: 0.95rem;
        color: var(--accent-color);
        text-decoration: none;
        border-bottom: 1px dashed var(--accent-color);
        padding-bottom: 2px;
        width: fit-content;
    }

    .featured-link:hover {
        border-bottom-style: solid;
    }

    @media (max-width: 768px) {
        .featured-card {
            grid-template-columns: 1fr;
            padding: 1.25rem;
        }

        .featured-media {
            width: 100%;
        }
    }
</style>
