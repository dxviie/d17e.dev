---
interface Props {
  color?: string;
}

const {color = "currentColor"} = Astro.props;
---
<div class="svg-container">
  <svg
          class="home-svg"
          width="100%"
          height="100%"
          viewBox="0 0 24 24"
          fill="none"
          stroke="none"
          stroke-width="2"
          stroke-linecap="square"
          stroke-linejoin="miter"
  >
    <!-- Main house shape with square corners -->
    <path d="M12 2L3 9v13h18V9L12 2z" fill="var(--color)"></path>
    <!-- Door cutout -->
    <rect x="10" y="15" width="4" height="8" fill="var(--bg-color)"></rect>
  </svg>
</div>

<style>
    .svg-container {
        display: flex;
        width: 24px;
        height: 24px;
    }

    .home-svg {
        transition: transform 0.3s ease;
    }

    .svg-container:hover .home-svg {
        transform: scale(1.1);
    }
</style>