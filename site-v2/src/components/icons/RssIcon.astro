// RssIcon.astro
// Usage: <RssIcon size="24" color="#FF7B00" />

interface Props {
  size?: string | number;
  color?: string;
  class?: string;
  title?: string;
}

const {
  size = 60,
  color = "currentColor",
  class: className = "",
  title = "RSS Feed"
} = Astro.props;

const sizeInPx = typeof size === 'number' ? `${size}px` : size;
