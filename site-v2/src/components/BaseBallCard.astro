---
interface Props {
  name: string;
  position: string;
  team: string;
  year: string;
  stats?: {
    label: string;
    value: string;
  }[];
  imageUrl?: string;
}

const {
  name,
  position,
  team,
  year,
  stats = [
    {label: "AVG", value: ".302"},
    {label: "HR", value: "32"},
    {label: "RBI", value: "98"},
    {label: "SB", value: "12"}
  ],
  imageUrl = "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Crect width='100' height='100' fill='%23ddd'/%3E%3Ctext x='50' y='50' font-family='Arial' font-size='14' fill='%23666' text-anchor='middle' dy='.3em'%3ENo Image%3C/text%3E%3C/svg%3E"
} = Astro.props;
---

<div class="card">
  <div class="image-container">
    <img src={imageUrl} alt={name}/>
  </div>
  <div class="card-inner">
    <div class="card-front">
      <div class="year">{year}</div>
      <div class="player-info">
        <h2 class="name">{name}</h2>
        <p class="position">{position}</p>
        <p class="team">{team}</p>
      </div>
    </div>
    <div class="stats">
      {stats.map(stat => (
              <div class="stat">
                <span class="stat-label">{stat.label}</span>
                <span class="stat-value">{stat.value}</span>
              </div>
      ))}
    </div>
  </div>
</div>

<style>
    .card {
        width: 80vw;
        max-width: 50vh;
        min-width: 170px;
        aspect-ratio: 359/539;
        perspective: 1000px;
        font-family: 'Arial', sans-serif;
        border-radius: 12px;

    }

    .card-inner {
        font-family: 'nudica_monobold', serif;
        pointer-events: none;
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

    .card-front {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: end;
        pointer-events: none;
    }

    .year {
        position: absolute;
        top: 10px;
        right: 10px;
        background: var(--color);
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-weight: bold;
        font-size: 0.9em;
    }

    .image-container {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        background: #f3f4f6;
        filter: grayscale(100%) contrast(120%) brightness(95%) blur(0.5px);
        border-radius: 12px;
        transition: filter 0.3s ease;
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transform: scale(1.2);

    }

    .image-container:hover {
        filter: none;
    }

    .player-info {
        z-index: 1;
        padding: 15px;
    }

    .name {
        margin: 0;
        font-size: 1.4em;
        font-weight: bold;
        color: #111827;
    }

    .position, .team {
        margin: 5px 0;
        color: #4b5563;
        font-size: 0.9em;
    }

    .stats {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        padding: 15px;
        background: #f8fafc;
        border-top: 2px solid #e5e7eb;
    }

    .stat {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 5px;
    }

    .stat-label {
        font-size: 0.8em;
        color: #6b7280;
        text-transform: uppercase;
    }

    .stat-value {
        font-size: 1.1em;
        font-weight: bold;
        color: #111827;
    }

    @media (max-width: 768px) {
        .card {
            width: 90vw;
            max-width: 90vw;
        }

        .name {
            font-size: 1.2em;
        }

        .position, .team {
            font-size: 0.8em;
        }
    }
</style>