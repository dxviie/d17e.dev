---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../consts";

const pageTitle = `Work with David | ${SITE_TITLE}`;
const pageDescription =
    "Commissions, Prototypes, and product work. I build fast & beautiful web experiences that help you sell.";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={pageTitle} description={pageDescription} />
        <style>
            main {
                width: 90%;
                max-width: 960px;
                padding: 2.5rem 1rem 3.5rem;
                min-height: calc(100vh - 30rem);
            }

            .hero {
                display: flex;
                flex-direction: column;
                gap: 1rem;
                margin: 0 auto 2.5rem;
            }

            .kicker {
                font-family: "nudica_monolight", serif;
                letter-spacing: 0.02em;
                color: var(--color);
                opacity: 0.9;
            }

            .headline {
                font-family: "nudica_monobold", serif;
                font-size: clamp(2.2rem, 5vw, 3.6rem);
                line-height: 1.05;
            }

            .subhead {
                font-family: "argesta_regular", serif;
                font-size: clamp(1.1rem, 2.5vw, 1.35rem);
                color: rgb(var(--gray));
            }

            .cta {
                display: flex;
                flex-wrap: wrap;
                gap: 0.75rem;
                margin-top: 0.5rem;
            }

            .button {
                display: inline-flex;
                align-items: center;
                justify-content: center;
                height: 2.75rem;
                padding: 0 1.1rem;
                border-radius: 999px;
                text-decoration: none;
                font-family: "nudica_monobold", serif;
                color: var(--bg-color);
                background: var(--button-bg-color);
            }

            .button.secondary {
                color: var(--color);
                background: rgba(var(--gray-light), 0.6);
                border: 1px solid var(--border-color);
            }

            .pill-list {
                display: flex;
                flex-wrap: wrap;
                gap: 0.5rem;
                margin: 1.5rem 0 0;
                padding: 0;
                list-style: none;
            }

            .pill {
                font-family: "nudica_monobold", serif;
                font-size: 0.95rem;
                padding: 0.35rem 0.7rem;
                border-radius: 999px;
                color: var(--color);
                background: rgba(var(--gray-light), 0.6);
                border: 1px solid var(--border-color);
            }

            .sections {
                display: grid;
                grid-template-columns: 1fr;
                gap: 2rem;
                margin-top: 2.5rem;
            }

            .card {
                padding: 1.25rem 1rem;
                border: 1px solid var(--border-color);
                border-radius: 12px;
                background: var(--bg-color);
            }

            .card h2 {
                font-family: "nudica_monobold", serif;
                font-size: 1.35rem;
                margin-bottom: 0.5rem;
            }

            .card p {
                margin: 0;
            }

            .inline-link {
                color: var(--accent-color);
                text-decoration: none;
            }

            @media (min-width: 820px) {
                .sections {
                    grid-template-columns: 1fr 1fr;
                }
            }

            @media (max-width: 600px) {
                .hero {
                    gap: 0.75rem;
                }
            }
        </style>
    </head>
    <body>
        <div class="statusbar"></div>
        <Navigation />
        <main class="content-margin">
            <section class="hero" aria-label="Intro">
                <div class="kicker">
                    Available for Commissions & Development
                </div>
                <h1 class="headline">
                    I build fast & beautiful web experiences that help you sell.
                </h1>
                <p class="subhead">
                    Prototypes, campaigns, and production systems.<br /> Clear scope,
                    quick turns, measurable outcomes.
                </p>
                <div class="cta">
                    <a
                        href="https://forms.d17e.dev/contact"
                        class="button push-button"
                        data-umami-event="landing-cta-contact"
                        >Start a project</a
                    >
                    <a
                        href="/projects"
                        class="button secondary push-button"
                        data-umami-event="landing-cta-projects">See projects</a
                    >
                    <a
                        href="/posts"
                        class="button secondary push-button"
                        data-umami-event="landing-cta-media">Browse media</a
                    >
                </div>
                <ul class="pill-list" aria-label="Focus areas">
                    <li class="pill">Web Apps</li>
                    <li class="pill">Creative Coding</li>
                    <li class="pill">Design Systems</li>
                    <li class="pill">Performance & UX</li>
                    <li class="pill">Prototypes → Production</li>
                </ul>
            </section>

            <section class="sections" aria-label="How we can work together">
                <article class="card">
                    <h2>Commission</h2>
                    <p>
                        Bring your idea, brand moment, or campaign. I deliver
                        bespoke visuals, interactive pieces, or micro-sites that
                        convert.
                    </p>
                </article>
                <article class="card">
                    <h2>Product & Prototype</h2>
                    <p>
                        From zero to demo fast. Ship early, iterate together,
                        and mature into stable, maintainable systems.
                    </p>
                </article>
                <article class="card">
                    <h2>Consulting</h2>
                    <p>
                        Architecture, performance audits, or design-system
                        implementation. Pragmatic guidance with hands-on
                        delivery.
                    </p>
                </article>
                <article class="card">
                    <h2>Next step</h2>
                    <p>
                        Tell me about the outcome you want. I’ll propose a
                        path—fixed scope or ongoing—so you can choose with
                        confidence. <a
                            class="inline-link"
                            href="https://forms.d17e.dev/contact">Let’s talk</a
                        >.
                    </p>
                </article>
            </section>
        </main>
        <Footer />
    </body>
</html>

<style>
    main {
        /* margin: 12.5rem 0; */
    }
</style>
