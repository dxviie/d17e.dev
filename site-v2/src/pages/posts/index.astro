---
import {SITE_TITLE, SITE_DESCRIPTION} from '../../consts';
import {getCollection} from 'astro:content';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import BaseHead from "../../components/BaseHead.astro";

const posts = (await getCollection('posts')).sort(
  (a, b) => (b.data.publishDate?.valueOf() || 0) - (a.data.publishDate?.valueOf() || 0),
);
---

<!doctype html>
<html lang="en">
<head>
  <title>{SITE_TITLE} | Posts</title>
  <BaseHead title={`${SITE_TITLE} | Posts`} description={SITE_DESCRIPTION}/>
  <style>
      main {
          width: 960px;
          max-width: calc(100% - 2rem);
          margin: 0 auto;
          padding: 2rem 0;
      }

      ul {
          display: flex;
          flex-wrap: wrap;
          gap: 2rem;
          list-style-type: none;
          margin: 0;
          padding: 0;
      }

      ul li {
          width: calc(50% - 1rem);
          background: rgba(var(--gray-light), 0.05);
          border-radius: 12px;
          overflow: hidden;
          transition: all 0.3s ease;
      }

      ul li:hover {
          transform: translateY(-5px);
          box-shadow: var(--box-shadow);
      }

      ul li:first-child {
          width: 100%;
          margin-bottom: 1rem;
      }

      .media-container {
          position: relative;
          width: 100%;
          aspect-ratio: 16/9;
          overflow: hidden;
      }

      ul li img {
          width: 100%;
          height: 100%;
          object-fit: cover;
      }

      ul li video {
          width: 100%;
          height: 100%;
          object-fit: cover;
      }

      .video-indicator {
          position: absolute;
          bottom: 10px;
          right: 10px;
          background: rgba(0, 0, 0, 0.5);
          color: white;
          padding: 4px 8px;
          border-radius: 4px;
          font-size: 0.8rem;
      }

      ul li a {
          display: block;
          text-decoration: none;
      }

      .content {
          padding: 1rem;
      }

      .title {
          margin: 0;
          color: rgb(var(--black));
          line-height: 1.2;
          font-size: 1.5rem;
      }

      ul li:first-child .title {
          font-size: 2rem;
      }

      .date {
          margin: 0.5rem 0 0;
          color: rgb(var(--gray));
          font-size: 0.9rem;
      }

      @media (max-width: 768px) {
          ul {
              gap: 1rem;
          }

          ul li {
              width: 100%;
          }
      }
  </style>
</head>
<body>
<Header/>
<main>
  <section>
    <ul>
      {
        posts.map((post) => {
          // Determine if the cover is a video 

          const isVideo = post.data.cover?.type?.startsWith('video/') ||
            post.data.cover?.filenameDownload?.endsWith('.mp4') ||
            post.data.cover?.filenameDownload?.endsWith('.mov');

          // Get the appropriate media type

          const mediaType = post.data.cover?.type ||
            (post.data.cover?.filenameDownload?.endsWith('.mp4') ? 'video/mp4' :
              post.data.cover?.filenameDownload?.endsWith('.mov') ? 'video/quicktime' : '');

          return (
                  <li>
                    <a href={`/posts/${post.data.slug}/`}>
                      {post.data.cover && (
                              <div class="media-container">
                                {isVideo ? (
                                        <>
                                          <video
                                                  muted
                                                  loop
                                                  playsinline
                                                  preload="metadata"
                                                  poster={`${import.meta.env.DIRECTUS_URL}/assets/${post.data.cover.id}`}
                                          >
                                            <source
                                                    src={`${import.meta.env.DIRECTUS_URL}/assets/${post.data.cover.id}#t=0.1`}
                                                    type={mediaType}
                                            />
                                          </video>
                                          <div class="video-indicator">Video</div>
                                        </>
                                ) : (
                                        <img
                                                src={`${import.meta.env.DIRECTUS_URL}/assets/${post.data.cover.id}?width=800&height=450&fit=cover&format=webp`}
                                                alt={post.data.cover.title || post.data.title}
                                        />
                                )}
                              </div>
                      )}
                      <div class="content">
                        <h2 class="title">{post.data.title}</h2>
                        {post.data.publishDate && (
                                <p class="date">
                                  <FormattedDate date={post.data.publishDate}/>
                                </p>
                        )}
                      </div>
                    </a>
                  </li>
          )
        })
      }
    </ul>
  </section>
</main>
<Footer/>

<script>
  // Add event listeners to start videos on hover
  document.addEventListener('DOMContentLoaded', () => {
    const videos = document.querySelectorAll('video');

    videos.forEach(video => {
      const listItem = video.closest('li');

      if (listItem) {
        listItem.addEventListener('mouseenter', () => {
          video.play();
        });

        listItem.addEventListener('mouseleave', () => {
          video.pause();
          // Reset to first frame
          video.currentTime = 0.1;
        });
      }
    });
  });
</script>
</body>
</html>